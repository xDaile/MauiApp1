        </ScrollView>
        <ContentView BackgroundColor="{DynamicResource PrimaryColor}"
                     Padding="10"
                     Margin="5,0"
                     Grid.Row="2">

            <Grid ColumnDefinitions="*, *, *"
                  ColumnSpacing="60">
                <Button Text="Edit"
                        IsVisible="{Binding editButtonVisibility}"
                        Grid.Column="0"
                        SemanticProperties.Hint="Counts the number of times you click"
                        Clicked="EditTraining"
                        HorizontalOptions="StartAndExpand" />
                <Button Text="+"
                        FontAttributes="Bold"
                        Grid.Column="1"
                        SemanticProperties.Hint="Counts the number of times you click"
                        Clicked="CreateNewTraining"
                        HorizontalOptions="CenterAndExpand" />
                <Button Text="Start"
                        IsVisible="{Binding startButtonVisibility}"
                        FontAttributes="Bold"
                        Grid.Column="2"
                        SemanticProperties.Hint="Counts the number of times you click"
                        Clicked="OnCounterClicked"
                        HorizontalOptions="EndAndExpand" />
            </Grid>


        </ContentView>
    </Grid>
