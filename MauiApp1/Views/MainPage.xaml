          RowSpacing="25">

        <ContentView Padding="15"
                     Grid.Row="0">

            <Button Text="Settings"
                    FontAttributes="Bold"
                    Clicked="GoToSettings"
                    HorizontalOptions="EndAndExpand" />



        </ContentView>
        <ScrollView Grid.Row="1">

            <CollectionView ItemsSource="{Binding trainingList}"
                            SelectionMode="Single"
                            SelectedItem="{Binding selectedTraining}"
                            SelectionChangedCommand="{Binding TrainingSelected}">

            </CollectionView>

