<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="MauiApp1.Views.ExerciseListView"
                       xmlns:models="clr-namespace:MauiApp1.Models"
                       xmlns:viewModels="clr-namespace:MauiApp1.ViewModels"
                       xmlns:resources="clr-namespace:MauiApp1.Resources"
                       xmlns:views="clr-namespace:MauiApp1.Views"
                       Title="{x:Static resources:Texts.Exercise_List_Page_Title}"
                       x:DataType="viewModels:ExerciseListViewModel"
                       x:Name="Root">
    <Grid RowDefinitions="15,*,10, 60">
        <ScrollView Grid.Row="1"
                    Margin="10">
            <CollectionView ItemsSource="{Binding Exercises}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="25" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ExerciseModel">

                        <Frame >
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference Root}, Path=BindingContext.GoToDetailCommand}"
                                                      CommandParameter="{Binding Id}" />
                            </Frame.GestureRecognizers>
                            <Grid ColumnDefinitions="5,65,15,*" RowDefinitions="5,Auto,8,Auto">

                                <Image Grid.Column="1"
                                       Grid.RowSpan="4"
                                       
                                       Source="/Images/training_plan.png"
                                       Aspect="AspectFit"
                                       VerticalOptions="CenterAndExpand"
                                       
                                       Margin="10,10,10,10"
                                       MaximumHeightRequest="70"
                                       MaximumWidthRequest="70"
                                       HorizontalOptions="CenterAndExpand" />
    
                                <Label Grid.Column="3"
                                       Grid.Row="1"
                                       LineBreakMode="CharacterWrap"
                                       Text="{Binding Name}"
                                       FontSize="22"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Start" />
                                <Label Grid.Column="3"
                                       Grid.Row="3"
                                       Text="{Binding Description}"
                                       FontSize="15"
                                       LineBreakMode="CharacterWrap"
                                       FontAttributes="Italic"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Start" />
                            </Grid>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </ScrollView>
        <Button Grid.Row="4"
                Margin="5"
                CornerRadius="60"
                FontFamily="MontserratRegular"
                FontSize="20"
                Command="{Binding AddNewCommand}"
                Text="{x:Static resources:Texts.Add_new_exercise_button}"></Button>
    </Grid>
</views:ContentPageBase>
